# Base runtime image
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS base
WORKDIR /app
EXPOSE 80

# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy .csproj and restore dependencies
COPY ScoringTablet/ScoringTablet.csproj ScoringTablet/
RUN dotnet restore ScoringTablet/ScoringTablet.csproj

# Copy the full source
COPY ScoringTablet/. ScoringTablet/
WORKDIR /src/ScoringTablet
RUN dotnet build -c Release -o /app/build

# Publish stage
FROM build AS publish
RUN dotnet publish -c Release -o /app/publish

# Final runtime image
FROM base AS final
WORKDIR /app
COPY --from=publish /app/publish .
ENTRYPOINT ["dotnet", "ScoringTablet.dll"]
